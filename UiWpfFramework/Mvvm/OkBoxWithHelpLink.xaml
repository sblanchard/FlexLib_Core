<Window x:Class="Flex.UiWpfFramework.Mvvm.OkBoxWithHelpLink"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        Icon="pack://application:,,,/Flex.UiWpfFramework;component/Mvvm/blankicon.ico"
        ShowInTaskbar="False" Topmost="True"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" UseLayoutRounding="True"
        MinHeight="155" MaxWidth="470" MinWidth="154"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="White" MinHeight="69">
            <DockPanel>
                <Image Width="32" Height="32" HorizontalAlignment="Left" DockPanel.Dock="Left" Margin="30,20,0,0" VerticalAlignment="Top" Source="{Binding Path=IconImageSource, Mode=OneWay}"/>
                <TextBlock TextWrapping="Wrap" MaxWidth="500" Width="Auto" VerticalAlignment="Center" Margin="12,11,41,15">
                    <Run Text="{Binding Path=Message, FallbackValue=Binding Error}"/>
                    <LineBreak/>
                    <Run Text="Please visit our"/>
                    <Hyperlink Command="{Binding Path=HelpLinkCommand}">Help Desk</Hyperlink> 
                    <Run Text="for more information."/>
                </TextBlock>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" MinHeight="49">
            <DockPanel Margin="5,0">
                <Button MinWidth="88" MaxWidth="160" Margin="35,0,5,0" HorizontalAlignment="Right" Height="26" Command="{Binding Path=OkPressedCommand, Mode=OneWay}" IsDefault="True">
                    <Label Padding="0" Margin="10,0">OK</Label>
                </Button>
            </DockPanel>
        </Grid>
    </Grid>
</Window>